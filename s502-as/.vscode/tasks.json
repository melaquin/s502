{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "cargo build"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
			},
			"label": "cargo test"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"afl",
				"build",
				"--features",
				"fuzzing"
			],
			"label": "cargo afl build"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"tarpaulin",
				"--color",
				"never",
				"--out",
				"html",
				"--output-dir",
				".coverage",
				"--target-dir",
				"../target/tarpaulin",
				">",
				".coverage/report.txt",
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
			},
			"label": "cargo tarpaulin"
		}
	]
}